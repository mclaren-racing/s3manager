{{ define "content" }}
<style>
    .breadcrumbs-bar {
        background-color: #fafafa;
        border-bottom: 1px solid #e0e0e0;
        padding: 0.75rem 0;
    }
    .breadcrumbs-bar .breadcrumb {
        font-size: 1.1rem;
        color: #757575;
    }
    .breadcrumbs-bar .breadcrumb:before {
        content: '/';
        color: #bdbdbd;
        margin: 0 5px 0 3px;
        font-size: unset;
    }
    .breadcrumbs-bar .breadcrumb:first-child:before {
        content: '';
        margin: 0;
    }
    .breadcrumbs-bar .breadcrumb:last-child {
        color: #424242;
    }
    .breadcrumbs-bar .breadcrumb i {
        vertical-align: middle;
        font-size: 1.4rem;
        margin-right: 4px;
    }
    .container .section {
        padding: 2rem 0;
    }
    .table-container {
        background: #fff;
        border: 1px solid #e0e0e0;
        border-radius: 4px;
        overflow: hidden;
    }
    table.striped {
        border: none;
    }
    table.striped thead {
        border-bottom: 1px solid #e0e0e0;
    }
    table.striped th {
        font-weight: 500;
        color: #424242;
    }
    table.striped tbody tr:hover {
        background-color: #f5f5f5 !important;
    }
    table.striped td, table.striped th {
        padding: 12px 15px;
    }
    td i.material-icons {
        vertical-align: middle;
        margin-right: 10px;
        color: #757575;
    }
</style>

<div class="breadcrumbs-bar">
    <div class="container">
        <a href="/buckets" class="breadcrumb">buckets</a>
        {{ $url := printf "/buckets/%s/" $.BucketName }}
        <a href="{{ $url }}" class="breadcrumb">{{ $.BucketName }}</a>

        {{ range $index, $path := .Paths }}
        {{ $url = printf "%s%s/" $url $path }}
        <a href="{{ $url }}" class="breadcrumb">{{ $path }}</a>
        {{ end }}
    </div>
</div>

<div class="container">
    <div class="section">
        {{ if .Objects }}
        <div class="table-container">
            <table class="striped">
                <thead>
                    <tr>
                        <th>Key</th>
                        <th>Size</th>
                        <th>Owner</th>
                        <th>Last Modified</th>
                    </tr>
                </thead>

                <tbody>
                    {{ range $index, $object := .Objects }}
                    <tr {{ if $object.IsFolder }} onclick="location.href='/buckets/{{ $.BucketName }}/{{ $object.Key }}'" style="cursor:pointer;" {{ end }}>
                        <td>
                            <i class="material-icons">{{ $object.Icon }}</i> {{ $object.DisplayName }}
                        </td>
                        <td>{{ $object.Size }} bytes</td>
                        <td>{{ $object.Owner }}</td>
                        <td>{{ $object.LastModified }}</td>
                    </tr>
                    {{ end }}
                </tbody>
            </table>
        </div>
        {{ end }}

        {{ if not .Objects }}
        <p style="text-align:center;margin-top:2em;color:gray;">No objects in <strong>{{ .BucketName }}/{{ .CurrentPath }}</strong> yet</p>
        {{ end }}
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function() {
    const table = document.querySelector(".table-container table");
    if (table) {
        const tbody = table.querySelector("tbody");
        const rows = Array.from(tbody.querySelectorAll("tr"));

        rows.sort((a, b) => {
            const aIsFolder = a.querySelector("td:first-child i.material-icons").textContent === 'folder';
            const bIsFolder = b.querySelector("td:first-child i.material-icons").textContent === 'folder';

            if (aIsFolder && !bIsFolder) return -1;
            if (!aIsFolder && bIsFolder) return 1;

            const nameA = a.cells[0].textContent.trim().toLowerCase();
            const nameB = b.cells[0].textContent.trim().toLowerCase();
            return nameA.localeCompare(nameB);
        });

        rows.forEach(row => tbody.appendChild(row));
    }
});
</script>
{{ end }}